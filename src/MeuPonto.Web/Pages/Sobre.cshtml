@page
@model SobreModel
@{
    ViewData["Title"] = "Sobre";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index"><i class="bi bi-house"></i></a></li>
        <li class="breadcrumb-item active" aria-current="page">Sobre</li>
    </ol>
</nav>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card h-100">
            <img src="~/img/meuponto.png" class="card-img-top" alt="Logo">
            <div class="card-body">
                <h5 class="card-title">Meu Ponto <span class="badge bg-dark">v1.0.x</span></h5>
                <p class="card-text">Sistema de controle de ponto para trabalhadores.</p>
            </div>
            <div class="card-footer">
                <span class="d-flex flex-row-reverse">
                    <a href="https://github.com/ateliex/MeuPonto" target="_blank" class="btn btn-sm btn-outline-secondary rounded-circle">
                        <i class="bi bi-github"></i>
                    </a>
                </span>
            </div>
        </div>
    </div>    
</div>